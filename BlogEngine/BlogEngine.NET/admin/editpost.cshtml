@using System.Web.Optimization
@using BlogEngine.Core
@{
    Layout = "~/admin/themes/standard/layout.cshtml";
    if (!Security.IsAuthorizedTo(Rights.EditOwnPosts))
    {
        Security.RedirectForUnauthorizedRequest();
    }
}
<div class="content" ng-controller="PostEditorController">
    <div class="page-header clearfix">
        <span ng-if="post.Id"><a href="{{post.RelativeLink}}" class="btn btn-sm btn-hasicon btn-success pull-left" target="_blank"><i class="fa fa-eye"></i> {{lbl.goToPost}}</a></span>
        <span ng-if="post.Id && post.IsPublished"><a href="#" class="btn btn-sm btn-hasicon btn-warning pull-left" ng-click="publish(false)"><i class="fa fa-undo"></i> {{lbl.unpublish}}</a></span>
        <a ng-if="status() < 2" href="#" data-ng-click="publish(true)" class="btn btn-sm btn-hasicon btn-success pull-left"><i class="fa fa-check"></i>{{lbl.publish}}</a>
        <a ng-if="status() == 2" href="#" data-ng-click="save()" class="btn btn-sm btn-hasicon btn-primary pull-left"><i class="fa fa-save"></i>{{lbl.save}}</a>
        <span ng-if="status() < 2"><a href="#" ng-click="save()" class="btn btn-sm btn-hasicon btn-primary pull-left"><i class="fa fa-save"></i> {{lbl.save}}</a></span>
        <a href="" onclick="window.history.back()" class="btn btn-sm btn-hasicon btn-default pull-right"><i class="fa fa-ban"></i>{{lbl.cancel}}</a>
        <span id="spinner" class="loaded pull-right"><i class='fa fa-spinner fa-spin fa-large'></i></span>
    </div>
    <div class="content-inner newpost">
        <form id="cat-form" action="">
            <div id="modal-add-cat" class="modal fade">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-hidden="true" ng-click="focusInput=false"><i class="fa fa-times"></i></button>
                            <h4 class="modal-title">{{lbl.addNewCategory}}</h4>
                        </div>
                        <div class="modal-body">
                            <div class="form-horizontal clearfix">
                                <div class="form-group">
                                    <label class="control-label col-md-4" for="txtCatTitle">{{lbl.title}}</label>
                                    <div class="col col-md-8">
                                        <input type="text" class="form-control" id="txtCatTitle" name="txtCatTitle" data-ng-model="category.Title" focus-me="focusInput" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-4" for="txtExcerpt">{{lbl.description}}</label>
                                    <div class="col col-md-8">
                                        <textarea class="form-control" id="txtExcerpt" name="txtExcerpt" data-ng-model="category.Description"> </textarea>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-4" for="selAuthors">{{lbl.parent}}</label>
                                    <div class="col col-md-8">
                                        <select id="selAuthors" class="form-control" data-ng-options="o.OptionValue as o.OptionName for o in lookups.CategoryList" data-ng-model="category.Parent.OptionValue">
                                            <option value="">-- {{lbl.select.toLowerCase()}} --</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" ng-click="saveCategory()" class="btn btn-success pull-right btn-tabkey"><i class="fa fa-save"></i>{{lbl.save}}</button>
                            <button type="button" class="btn btn-default" data-dismiss="modal" ng-click="focusInput=false"><i class="fa fa-ban"></i>{{lbl.cancel}}</button>
                        </div>
                    </div>
                </div>
            </div>
        </form>
        <form id="form" action="">
            <div id="modal-custom-fields" class="modal fade">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-hidden="true" ng-click="focusInput=false"><i class="fa fa-times"></i></button>
                            <h4 class="modal-title">{{lbl.add}}</h4>
                        </div>
                        <div class="modal-body modal-roles">
                            <div class="form-group">
                                <label class="control-label" for="txtKey">Key</label>
                                <input type="text" id="txtKey" name="txtKey" class="form-control" data-ng-model="editItem.Key" focus-me="focusInput" />
                                <label class="control-label" for="txtValue">Value</label>
                                <input type="text" id="txtValue" name="txtValue" class="form-control" data-ng-model="editItem.Value" />
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" data-ng-click="saveCustom()" class="btn btn-success btn-tabkey pull-right"><i class="fa fa-save"></i>{{lbl.save}}</button>
                            <button type="button" class="btn btn-default" data-dismiss="modal" ng-click="focusInput=false"><i class="fa fa-ban"></i>{{lbl.cancel}}</button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-8  col-md-9">
                    <input type="text" id="txtTitle" name="txtTitle" autocomplete="off" placeholder="{{lbl.titleOfPost}}..." class="form-control newpost-title" data-ng-model="post.Title" />
                    <div class="editor-wrapper">
                        @RenderPage(BlogConfig.DefaultEditor)
                    </div>
                    <div class="newpost-widget">
                        <div class="form-group">
                            <label class="newpost-widget-title">{{lbl.slug}}</label>
                            <input type="text" class="form-control" id="txtSlug" data-ng-model="post.Slug" />
                        </div>
                        <div class="form-group">
                            <label class="newpost-widget-title">{{lbl.description}}</label>
                            <textarea class="form-control" rows="4" id="txtExcerpt" data-ng-model="post.Description"> </textarea>
                        </div>
                    </div>
                </div>
                <div class="col-sm-4 col-md-3">
                    <div class="newpost-widget enable-comment">
                        <label><input type="checkbox" name="ckEnableComments" data-ng-model="post.HasCommentsEnabled" />{{lbl.enableComments}}</label>
                    </div>
                    <div class="newpost-widget">
                        <div class="form-group">
                            <label class="newpost-widget-title">{{lbl.categories}}</label>
                            <a title="{{lbl.add}}" href="" class="pull-right add-cat" ng-click="addCagegory()"><i class="fa fa-plus fa-sm"></i></a>
                            <ul class="categories-list">
                                <li ng-repeat="cat in lookups.CategoryList">
                                    <label>
                                        <input type="checkbox" id="cat-{{cat.OptionValue}}" data-ng-model="cat.IsSelected" />
                                        {{cat.OptionName}}
                                    </label>
                                </li>
                            </ul>
                        </div>
                        <div class="form-group">
                            <label class="newpost-widget-title">{{lbl.tags}}</label>
                            <div class="post-tags-selector">
                                <textarea id="postTags" class="form-control" style="width:100%;" placeholder="{{lbl.typeAndEnter}}..." rows="1"></textarea>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="newpost-widget-title">{{lbl.datePublished}}</label>
                            <input type="text" class="form-control dateFormatted" id="txtDate" name="txtDate" data-ng-model="post.DateCreated" />
                        </div>
                        <div class="form-group">
                            <label class="newpost-widget-title">{{lbl.author}}</label>
                            <select id="selAuthors" ng-disabled="usageScenario != 'multiusers'" class="form-control" data-ng-options="o.OptionName for o in lookups.AuthorList" data-ng-model="selectedAuthor"></select>
                        </div>
                    </div>
                    <div class="newpost-widget">
                        <div class="form-group">
                            <label class="newpost-widget-title">
                                {{lbl.customFields}}
                            </label>
                            <a ng-disabled="post.Id === null || post.Id === ''" class="btn btn-default btn-sm btn-block" id="btnCustomFields" ng-click="showCustom()" data-toggle="modal">{{lbl.add}}</a>
                            <div id="frm-custom-edit" ng-if="customFields && customFields.length > 0" class="form-horizontal clearfix" style="padding: 5px 0">
                                <div data-ng-repeat="item in customFields">
                                    <label class="control-label">{{item.Key}}</label>
                                    <a href="" ng-click="deleteCustom(item.Key, item.ObjectId)" title="{{lbl.doDelete}}" class="pull-right" style="position: relative; top: 10px; color: red"><i class="fa fa-times"></i></a>
                                    <input type="text" class="form-control" data-ng-model="item.Value" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
@Scripts.Render("~/scripts/wysiwyg")
@{
    if (BlogConfig.DefaultEditor == "~/admin/editors/tinymce/editor.cshtml")
    {
        <script src="~/admin/editors/tinymce/tinymce.min.js"></script>
        <script src="~/admin/editors/tinymce/editor.js"></script>
    }
}