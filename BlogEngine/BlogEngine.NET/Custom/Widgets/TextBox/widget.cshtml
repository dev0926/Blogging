@using BlogEngine.NET.Custom.Widgets
@{
    var settings = Common.GetSettings(Model.Id);
    var txt = "";
    if (settings != null && settings.Count > 0)
    {
        txt = HttpUtility.HtmlDecode(settings["content"]);
    }
}
<div class="Widget textbox" id="widget@(Model.Id)">
    @Html.Raw(txt)
</div>